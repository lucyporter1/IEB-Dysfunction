qual_gut_epi1 <- subset(epithelial_gut, subset = nFeature_RNA > 200 & nFeature_RNA < 2500 & percent.mt < 5)

gut <- NormalizeData(gut, normalization.method = "LogNormalize", scale.factor = 10000)

